{
	"extends": "next/core-web-vitals",
	"rules": {
		"indent": ["error", "tab"],
		"linebreak-style": ["error", "unix"],
		"quotes": ["error", "single"],
		"semi": ["error", "always"],
		"no-duplicate-imports": "error",
		"no-template-curly-in-string": "warn",
		"no-use-before-define": [
			"error",
			{
				"functions": true,
				"classes": true,
				"variables": true,
				"allowNamedExports": false
			}
		],
		"camelcase": "error",
		"dot-notation": "warn",
		"comma-spacing": "warn",
		"comma-style": "warn",
		"space-in-parens": ["error", "never"]
	}
}
